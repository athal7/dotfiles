# Rails 2 console
def change_log(stream)
  ActiveRecord::Base.connection.instance_variable_set :@logger, Logger.new(stream)
  ActiveRecord::Base.clear_active_connections!
end

def show_log
  change_log(STDOUT)
end

def hide_log
  change_log(nil)
end

