RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
BLUE="\[\033[0;36m\]"
PINK="\[\033[0;35m\]"
WHITE="\[\033[1;37m\]"
BLACK="\[\033[0;30m\]"
OFF="\[\033[0m\]"

export PS1="$BLUE\W$YELLOW \$(git_branch)$PINK \$(rvm_version) $GREEN \n§ $OFF"

function rvm_version {
  local gemset=$(echo $GEM_HOME | awk -F'@' '{print $2}')
  [ "$gemset" != "" ] && echo "•$(~/.rvm/bin/rvm-prompt v)@$gemset"
}

function git_branch {
  echo "$(__git_ps1 "%s")"
}

# show directory in iterm header
export PROMPT_COMMAND='echo -ne "\033]0;${PWD/#$HOME/~}\007"'
