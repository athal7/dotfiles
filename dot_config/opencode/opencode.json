{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "server": {
    "hostname": "127.0.0.1",
    "port": 4096
  },
  "permission": {
    "skill": "allow"
  },
  "default_agent": "plan",
  "model": "anthropic/claude-sonnet-4-5",
  "agent": {
    "build": {
      "model": "anthropic/claude-opus-4-6"
    },
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "textVerbosity": "low",
      "temperature": 0.3,
      "permission": {
        "bash": {
          "*": "deny",
          "git *": "allow",
          "gh pr *": "allow",
          "gh issue *": "allow",
          "gh api *": "allow",
          "gh repo view *": "allow",
          "gh search *": "allow"
        }
      }
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-6": { "name": "opus" },
        "claude-sonnet-4-5": { "name": "sonnet" },
        "claude-haiku-4-5": { "name": "haiku" }
      }
    },
    "github-copilot": {
      "models": {
        "claude-opus-4.6": { "name": "opus-cp" },
        "gemini-3-pro-preview": { "name": "gemini" },
        "gemini-3-flash-preview": { "name": "flash" },
        "gpt-4.1": { "name": "gpt" },
        "gpt-5-mini": { "name": "gpt-mini" }
      }
    },
    "llama-local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama.cpp (local)",
      "options": {
        "baseURL": "http://localhost:8090/v1"
      },
      "models": {
        "qwen3-4b": {
          "name": "qwen3-4b",
          "limit": {
            "context": 32768,
            "output": 4096
          }
        }
      }
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    }
  },
  "plugin": [
    "opencode-pty@^0.1",
    "@simonwjackson/opencode-direnv@^2025",
    "opencode-wakatime@^1.2"
  ],
  "mcp": {
    "team-context": {
      "type": "remote",
      "url": "http://localhost:8100/mcp"
    },
    "playwright": {
      "type": "remote",
      "url": "http://localhost:8101/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
