{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "server": {
    "hostname": "127.0.0.1"
  },
  "permission": {
    "skill": "allow"
  },
  "default_agent": "router",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "ollama/devstral-small-2",
  "agent": {
    "router": {
      "model": "ollama/devstral-small-2"
    },
    "build": {
      "model": "anthropic/claude-opus-4-6"
    },
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "textVerbosity": "low"
    },
    "explore": {
      "model": "ollama/devstral-small-2"
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-6": { "name": "opus" },
        "claude-sonnet-4-5": { "name": "sonnet" }
      }
    },
    "github-copilot": {
      "models": {
        "claude-opus-4.6": { "name": "opus-cp" },
        "gemini-3-pro-preview": { "name": "gemini" },
        "gemini-3-flash-preview": { "name": "flash" },
        "gpt-4.1": { "name": "gpt" },
        "gpt-5-mini": { "name": "gpt-mini" }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "devstral-small-2": {
          "name": "devstral",
          "limit": {
            "context": 384000,
            "output": 16384
          }
        }
      }
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    }
  },
  "plugin": [
    "opencode-pty@^0.1",
    "@simonwjackson/opencode-direnv@^2025",
    "opencode-wakatime@^1.1"
  ],
  "mcp": {
    "team-context": {
      "type": "remote",
      "url": "http://localhost:8100/mcp"
    },
    "playwright": {
      "type": "remote",
      "url": "http://localhost:8101/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
