{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "server": {
    "hostname": "127.0.0.1"
  },
  "permission": {
    "skill": "allow"
  },
  "default_agent": "plan",
  "model": "github-copilot/gpt-5",
  "small_model": "anthropic/claude-sonnet-4-5",
  "agent": {
    "build": {
      "model": "anthropic/claude-opus-4-5"
    },
    "plan": {
      "model": "github-copilot/gpt-5",
      "textVerbosity": "low"
    },
    "explore": {
      "model": "github-copilot/gemini-2.5-pro"
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-5": { "name": "opus" },
        "claude-sonnet-4-5": { "name": "sonnet" }
      }
    },
    "github-copilot": {
      "models": {
        "gpt-5": { "name": "gpt" },
        "gemini-2.5-pro": { "name": "gemini" }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5:14b": {
          "name": "qwen",
          "limit": {
            "context": 131072,
            "output": 8192
          }
        }
      }
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    }
  },
  "plugin": [
    "opencode-pilot@0.20.2",
    "opencode-pty@0.1.5",
    "@simonwjackson/opencode-direnv@2025.1211.9",
    "opencode-wakatime@1.1.1"
  ],
  "mcp": {
    "team-context": {
      "type": "remote",
      "url": "http://localhost:8100/mcp"
    },
    "playwright": {
      "type": "remote",
      "url": "http://localhost:8101/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
