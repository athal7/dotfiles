{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "server": {
    "hostname": "0.0.0.0"
  },
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-sonnet-4-5",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5:14b": {
          "name": "Qwen 2.5 14B",
          "limit": {
            "context": 131072,
            "output": 8192
          }
        }
      }
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    }
  },
  "plugin": [
    "opencode-devcontainers",
    "opencode-gemini-auth@latest",
    "opencode-openai-codex-auth@latest"
  ],
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest", "--isolated"],
      "enabled": true
    },
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--stdio"],
      "enabled": true
    },
    "granola": {
      "type": "local",
      "command": ["sh", "-c", "cd ~/.config/opencode/mcps && uv run granola-mcp.py"],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true
    },
    "elasticsearch": {
      "type": "local",
      "command": ["sh", "-c", "ES_HOST=\"$ES_URL\" npx -y @awesome-ai/elasticsearch-mcp"],
      "enabled": true
    }
  },
  "tools": {
    "playwright_*": false,
    "figma_*": false,
    "granola_*": false,
    "context7_*": false,
    "elasticsearch_*": false
  }
}
