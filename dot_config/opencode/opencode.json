{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [],
  "server": {
    "hostname": "127.0.0.1",
    "port": 4096
  },
  "permission": {
    "skill": "allow"
  },
  "default_agent": "plan",
  "model": "anthropic/claude-sonnet-4-6",
  "agent": {
    "build": {
      "model": "anthropic/claude-opus-4-6"
    },
    "plan": {
      "textVerbosity": "low",
      "temperature": 0.3,
      "permission": {
        "bash": {
          "*": "deny",
          "git *": "allow",
          "gh pr *": "allow",
          "gh issue *": "allow",
          "gh api *": "allow",
          "gh repo view *": "allow",
          "gh search *": "allow"
        }
      }
    },
    "review-security": {
      "model": "anthropic/claude-sonnet-4-6",
      "temperature": 0.1
    },
    "review-correctness": {
      "model": "anthropic/claude-sonnet-4-6",
      "temperature": 0.1
    },
    "review-performance": {
      "model": "anthropic/claude-sonnet-4-6",
      "temperature": 0.1
    },
    "review-maintainability": {
      "model": "anthropic/claude-sonnet-4-6",
      "temperature": 0.1
    }
  },
  "provider": {
    "opencode": {
      "models": {
        "trinity-large-preview-free": { "name": "trinity" },
        "big-pickle": { "name": "pickle" },
        "kimi-k2.5-free": { "name": "kimi" },
        "zen-minimax-m2.5-free": { "name": "minimax" },
        "glm-5-free": { "name": "glm" },
        "gpt-5-nano": { "name": "nano" }
      }
    },
    "anthropic": {
      "models": {
        "claude-opus-4-6": { "name": "opus" },
        "claude-sonnet-4-6": { "name": "sonnet" },
        "claude-haiku-4-5": { "name": "haiku" }
      }
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    }
  },
  "plugin": [
    "@simonwjackson/opencode-direnv@^2025",
    "opencode-pty@^0.1",
    "opencode-wakatime@^1.2"
  ],
  "mcp": {
    "team-context": {
      "type": "remote",
      "url": "http://localhost:8100/mcp"
    },
    "playwright": {
      "type": "remote",
      "url": "http://localhost:8101/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
