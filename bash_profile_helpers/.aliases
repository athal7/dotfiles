# ruby
  alias be='bundle exec'
  alias bs='bundle exec rspec'
  alias ss='script/server'
  alias rs='rails server'
  alias rc='rails console'
  alias show_rogue_servers="echo \$(rogue_servers)"
  alias kill_rogue_servers="kill -9 \$(rogue_servers)"
  alias bi='bundle install'
  alias bl="bundle --local"
  alias bbs="bundle install --binstubs .bundle/bin"
  alias fs="foreman start"
  alias gs="grunt serve"

# for dotfiles
  alias bp='vi  ~/.bash_profile'
  alias reload='source ~/.bash_profile; cd ..; cd -'

# always use macvim in the terminal when trying to use terminal vim
  alias vi='mvim -v'
  alias vim='mvim -v'

# applescripts
  alias vpn="osascript ~/applescripts/openvpn.applescript"
  alias rearrange="osascript ~/applescripts/WindowArrangement.scpt"

# tmux
  alias tmux="tmux -2"
  alias ta="tmux attach"

# git
  alias g='git' # see other aliases in .gitconfig

# pull requests
  alias bnpr="open http://github.com/bonobos/\$(application)/pull/new/\$(git_branch)"
  alias pr="open http://github.com/athal7/\$(application)/pull/new/\$(git_branch)"

# set tracking
  function track_branch { # requires argument of remote name
    echo -n "$(git branch --set-upstream-to=$1/$(git_branch) $(git_branch))"
    echo ""
  }

  function application {
    echo "$(pwd | awk -F/ '{print$NF}')"
  }

  function rogue_servers {
    echo "$(ps aux | grep -v 'grep\|guard\|fsevent' | grep 'ruby\|poller\|ror\:server' | awk '{print $2}')"
  }

# clean up scripts
  alias check_last_cleanup_run="ls -la /var/log/*.out"
  alias run_cleanup_scripts="sudo periodic daily weekly monthly"

# memcached
  alias flush_memcached="\$(stop_memcached) && \$(start_memcached)"
  alias stop_memcached='launchctl unload ~/Library/LaunchAgents/homebrew.mxcl.memcached.plist'
  alias start_memcached='launchctl load ~/Library/LaunchAgents/homebrew.mxcl.memcached.plist'

# For Virtualbox
  alias StartVB='sudo ifconfig lo0 alias 192.168.10.100'
  alias StopVB='sudo ifconfig lo0 -alias 192.168.10.100'

# Heroku
  alias deployheroku="heroku ps:scale web=2; git push heroku master; heroku ps:scale web=1"

# for syntax-highlighted cat
  alias cat="pygmentize -g"
