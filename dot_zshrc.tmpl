{{ template "brewenv" . }}

# the basics
  export EDITOR="code"
  alias e=$EDITOR
  
  alias cat='bat'
  alias g='git'
  alias less="less -R"
  alias lf="less +F"
  alias ll="ls -la"
{{ if not .codespaces }}
  alias du="ncdu --color dark -rr -x --exclude .git --exclude node_modules"
  alias tf='terraform'
  alias watch='watch '

  fancyCtrlZ() {
    if [[ $#BUFFER -eq 0 ]]; then
      BUFFER="fg"
      zle accept-line
    else
      zle push-input
      zle clear-screen
    fi
  }
  zle -N fancyCtrlZ
  bindkey '^Z' fancyCtrlZ
  
# docker
  alias d="docker"
  alias dc="docker-compose"
  alias dcr="docker-compose run --rm"
  alias docker_cleanup="docker system prune"
  alias k="kubectl"
{{ end -}}

# chezmoi
  export PATH="$HOME/bin:$PATH"
  alias c="chezmoi"
  alias cg="chezmoi git"
  function getSecret() {
    chezmoi secret keyring get --service=$1 --user={{.chezmoi.username}}
  }
  function setSecret() {
    chezmoi secret keyring set --service=$1 --user={{.chezmoi.username}} --value=$2
  }
  function deleteSecret() {
    chezmoi secret keyring delete --service=$1 --user={{.chezmoi.username}}
  }
  function listSecretNames() {
    security dump-keychain \
    | grep -b4 -A0 "\"acct\"<blob>=\"{{.chezmoi.username}}\"" \
    | grep -A3 genp \
    | grep 0x00000007 \
    | cut -d = -f 2 \
    | tr -d '"'
  }

  for secret in $(listSecretNames); do
    env_var=$(echo $secret | tr '[:lower:]' '[:upper:]' | sed -e 's/-/_/g')
    export $env_var=$(getSecret $secret)
  done

# source machine-specific config
  . ~/.secret

# zsh
  export ZPLUG_HOME=$(brew --prefix)/opt/zplug
  . $ZPLUG_HOME/init.zsh
  {{ if not .codespaces }}
  . $(brew --prefix asdf)/asdf.sh
  {{ end }}
  zplug "dracula/zsh", as:theme

  if ! zplug check; then
    zplug install
  fi
  zplug load
